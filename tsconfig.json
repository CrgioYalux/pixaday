{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Absolute Imports */

		"baseUrl": "./",
		"paths": {
			"@/utils/*": ["src/utils/*"],
			"@/components/*": ["src/components/*"],
			"@/color-palette/*": ["src/modules/color-palette/*"],
			"@/color-matrix/*": ["src/modules/color-matrix/*"],
			"@/color-matrix-tools/*": ["src/modules/color-matrix-tools/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
